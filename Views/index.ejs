<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <title>CRUD Product</title>
</head>

<body class="bg-gray-700 p-10">
  <div class="max-w-7xl mx-auto bg-white p-6 rounded shadow-lg shadow-gray-300/50">
    <div class="mb-4">
      <input type="text" class="border border-black w-5/6 p-2" placeholder="ðŸ”Ž Search...">
      <a href="/add"><button class="border p-2 ml-2 w-48 text-white bg-green-500">ADD</button></a>
    </div>
    <table class="min-w-full border bg-white">
      <thead>
        <tr class="uppercase">
          <th class="border p-1">No.</th>
          <th class="border p-3">Name</th>
          <th class="border p-2">Price</th>
          <th class="border p-2">Image</th>
          <th class="border p-3">Description</th>
          <th class="border p-2 w-44">Action</th>
        </tr>
      </thead>
      <tbody>
        <% product.forEach((e, index)=> { %>
          <tr>
            <td class="border p-1 text-center">
              <%= ++index %>
            </td>
            <td class="border p-3">
              <%= e.name %>
            </td>
            <td class="border p-2 text-center">
              <%= e.price %>
            </td>
            <td class="p-2 flex items-center justify-center">
              <img src="<%= e.img %>" width="120" height="120">
            </td>
            <td class="border p-3">
              <%= e.description %>
            </td>
            <td class="border p-2 w-44">
              <form action="/product/update" method="post" class="inline">
                <input type="hidden" name="update" value="<%= e._id %>">
                <button type="submit" class="border p-2 w-16 ml-2 text-white bg-yellow-400 rounded-md">Edit</button>
              </form>
              <a href="/product/delete/<%= e._id %>" onclick="return confirm('Are you sure to delete this product?')">
                <button class="border p-2 w-16 ml-2 text-white bg-red-700 rounded-md">Delete</button>
              </a>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
</body>

</html>